@{
    ViewData["Title"] = "Home Page";
}

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>


<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Clientes</h6>
                        <h6 id="totalcliente">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="bi bi-person fs-2"></i>
                    </div>
                </div>

            </div>
            
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Ventas</h6>
                        <h6 id="totalventas">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="bi  bi-cart-check-fill fs-2"></i>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-secondary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Productos</h6>
                        <h6 id="totalproductos">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="bi bi-basket3-fill fs-2"></i>
                    </div>
                </div>

            </div>
        </div> 
    </div>
   
</div>


<div class="card mb-4">
    <div class="card-header">
        <i class="bi bi-bag-check-fill"></i>
        Historial de Ventas    
    </div>

    <form action="@Url.Action("ExportarVenta", "Home")" method="post">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha Inicio: </label>
                        <input class="form-control" type="text" id="txtfechainicio" name="fechainicio" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha Fin: </label>
                        <input class="form-control" type="text" id="txtfechafin" name="fechafin" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">ID Transaccion: </label>
                        <input class="form-control" type="text" id="txtidtransaccion" name="idtransaccion" />
                    </div>
                </div>


                <div class=" col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-primary" id="btnbuscar" type="button"><i class="bi bi-search"></i>Buscar</button>
                    </div>
                </div>
                <div class=" col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-success" type="submit"><i class="bi bi-file-earmark-excel"></i>Exportar</button>
                    </div>
                </div>

            </div>
        </div>

    </form>
    
    <hr/>

    <div class="row">
        <div class="col-sm-12">
            <table id="tabla" class="display cell-border" style="width:100%">
                <thead>
                    <tr>
                        <th>Fecha Venta</th>
                        <th>Cliente</th>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                        <th>ID Transaccion</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
    
</div>


@section scripts{

    <script>

        //Para que pueda elegir fecha por calendario
        $("#txtfechainicio").datepicker({dateFormat: 'dd/mm/yy'}).datepicker('setDate' , new Date())
        $("#txtfechafin").datepicker({dateFormat: 'dd/mm/yy'}).datepicker('setDate' , new Date())


        //Para que aparezcan los totales arriba
        jQuery.ajax({
            url: '@Url.Action("VistaDashBoard", "Home")',
            type: "GET",
            datatype: "json",
            contentType: "application/json; charset-utf-8",
            success: function (data) {
                
                var objeto = data.resultado
                
                $("#totalcliente").text(objeto.totalCliente)
                $("#totalventas").text(objeto.totalVenta)
                $("#totalproductos").text(objeto.totalProducto)

            }
            
        });  


        //Seccion de la tabla
        var Url = '@Url.Action("ListaReporte", "Home")' + 
        "?fechainicio=" + $("#txtfechainicio").val() + 
        "&fechafin=" + $("#txtfechafin").val() + 
        "&fechainicio=" + $("#txtidtransaccion").val()
        

        tabladata = $("#tabla").DataTable({
            responsive: true,
            rowReorder: {
                selector: 'td:nth-child(2)'
            },
            ordering: true,
            "ajax":{
                url: Url,
                type: "GET",
                datatype: "json"
            },
            "columns": [
                { "data": "FechaVenta" },
                {"data": "Cliente" },
                {"data": "Producto"},
                {"data": "Precio"},
                {"data": "Cantidad"},
                {"data": "Total"},
                {"data": "ID_Transaccion"},
                
 
            ],
            "language":{
                "url": "//cdn.datatables.net/plug-ins/2.1.8/i18n/es-ES.json"
            }
        

        });

        $("#btnbuscar").on("click", function(){
            var nueva_url = '@Url.Action("ListaReporte", "Home")' + 
            "?fechainicio=" + $("#txtfechainicio").val() + 
            "&fechafin=" + $("#txtfechafin").val() + 
            "&fechainicio=" + $("#txtidtransaccion").val()

            tabladata.ajax.url(nueva_url).load();

        })
         



    </script> 




}