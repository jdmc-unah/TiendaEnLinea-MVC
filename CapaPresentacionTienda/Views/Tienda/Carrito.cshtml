
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        
                        @* Detalle producto *@
                        <div class="col-sm-9">
                            <div class="me-2">
                                <div class="d-flex justify-content-between">
                                    <h5 class="ms-2 mt-2 ">Detalle Carrito</h5>
                                    <a class="btn btn-primary" href="@Url.Action("Index","Tienda")"><i class="bi bi-cart-plus me-3"></i> Seguir Comprando</a>
                                </div>
                                
                                <hr class="mt-2 mb-3"/>

                                <div id="productos-carrito">
                                    <div class="card mb-2 card-producto">
                                        <div class="card-body">
                                            <div class="row">
                                                
                                                <div class="col-sm-2 align-self-center d-flex justify-content-center">
                                                    <img class="rounded" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" style="width:100px;height:100px" />
                                                </div>
                                                
                                                <div class ="col-sm-4 align-self-center">
                                                    <span class="font-weight-bold d-block">Marca</span>
                                                    <span>Nombre Producto</span>
                                                </div>
                                                
                                                <div class="col-sm-2 align-self-center">
                                                    <span>Precio: S/. 1500 </span>
                                                </div>

                                                <div class="col-sm-2 align-self-center">
                                                    <div class="d-flex">

                                                        <button class="btn btn-outline-secondary btn-restar rounded-0">
                                                            <i class="bi bi-dash-square"></i>
                                                        </button>
                                                        
                                                        <input class="form-control input-cantidad p-1 text-center rounded-0" disabled style="width:40px" />
                                                       
                                                        <button class="btn btn-outline-secondary btn-sumar rounded-0">
                                                            <i class="bi bi-plus-square"></i>
                                                        </button>
                                                    </div>
                                                </div>

                                                <div class="col-sm-2 align-self-center">
                                                    <button class="btn btn-outline-danger btn-eliminar"> <i class="bi bi-trash me-1"></i>Eliminar</button>
                                                </div>


                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="d-flex justify-content-end">
                                    <label class="align-self-center"> <b>Total S/. <span id="total">0</span> </b> </label>
                                </div>

                            </div>
                        </div>


                        @* Detalle Envio *@
                        <div class="col-sm-3">
                            <div class="card">
                                <div  class="card-body bg-light">
                                    <h5 class="card-title">Detalle Envio</h5>

                                    <form action="/" method="post">
                                        <div class="mb-2">
                                            <label for="cbodepartamento" class="form-label" >Departamento: </label>
                                            <select class="form-select form-select-sm" id="cbodepartamento"></select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="cbomunicipio" class="form-label">Municipio: </label>
                                            <select class="form-select form-select-sm" id="cbomunicipio"></select>
                                        </div>

                                        <div class="mb-2">
                                            <label for="txtnombrecontacto" class="form-label">Nombre Contacto: </label>
                                            <input type="text" class="form-control form-control-sm" id="txtnombrecontacto" autocomplete= "off">
                                        </div>

                                        
                                        <div class="mb-2">
                                            <label for="txtdireccion" class="form-label">Dirección: </label>
                                            <input type="text" class="form-control form-control-sm" id="txtdireccion" autocomplete= "off">
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label for="txttelefono" class="form-label">Teléfono: </label>
                                            <input type="text" class="form-control form-control-sm" id="txttelefono" autocomplete= "off">
                                        </div>

                                        <div class="d-grid">
                                            <button class="btn btn-success" type="button" onclick="RealizarPago()">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-paypal me-3" viewBox="0 0 16 16">
                                                        <path d="M14.06 3.713c.12-1.071-.093-1.832-.702-2.526C12.628.356 11.312 0 9.626 0H4.734a.7.7 0 0 0-.691.59L2.005 13.509a.42.42 0 0 0 .415.486h2.756l-.202 1.28a.628.628 0 0 0 .62.726H8.14c.429 0 .793-.31.862-.731l.025-.13.48-3.043.03-.164.001-.007a.35.35 0 0 1 .348-.297h.38c1.266 0 2.425-.256 3.345-.91q.57-.403.993-1.005a4.94 4.94 0 0 0 .88-2.195c.242-1.246.13-2.356-.57-3.154a2.7 2.7 0 0 0-.76-.59l-.094-.061ZM6.543 8.82a.7.7 0 0 1 .321-.079H8.3c2.82 0 5.027-1.144 5.672-4.456l.003-.016q.326.186.548.438c.546.623.679 1.535.45 2.71-.272 1.397-.866 2.307-1.663 2.874-.802.57-1.842.815-3.043.815h-.38a.87.87 0 0 0-.863.734l-.03.164-.48 3.043-.024.13-.001.004a.35.35 0 0 1-.348.296H5.595a.106.106 0 0 1-.105-.123l.208-1.32z" />
                                                    </svg>Terminar y Procesar Pago
                                            </button>
                                        </div>

                                    </form>

                                </div>
                            </div>
                        </div>

                    
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <script>

        $(document).ready(function () {

            jQuery.ajax({
                url: "@Url.Action("ListarProductosCarrito", "Tienda")",
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {

                    $("#productos-carrito").html("");
                    
                    $("#productos-carrito").LoadingOverlay("hide");

                    $.each(response.data, function (i, item) {

                        $("<div>").addClass("card mb-2 card-producto").append(
                            $("<div>").addClass("card-body").append(
                                $("<div>").addClass("row").append(
                                    
                                    //1
                                    $("<div>").addClass("col-sm-2 align-self-center d-flex justify-content-center").append(
                                        $("<img>").addClass("rounded").attr({"src":"data:image/" + item.oProducto.extension + ";base64," + item.oProducto.base64 })
                                            .css({"width":"100px", "height":"100px"})
                                    ),

                                    //2
                                    $("<div>").addClass("col-sm-4 align-self-center").append(
                                        $("<span>").addClass("font-weight-bold d-block").text(item.oProducto.oMarca.descripcion),
                                        $("<span>").text(item.oProducto.nombre)

                                    ),

                                    //3
                                    $("<div>").addClass("col-sm-2 align-self-center").append(

                                        $("<span>").text("$ " +item.oProducto.precio.toFixed(2) + " USD")
                                    ),

                                    //4
                                    $("<div>").addClass("col-sm-2 align-self-center").append(
                                        $("<div>").addClass("d-flex").append(
                                            $("<button>").addClass("btn btn-outline-secondary btn-restar rounded-0").append($("<i>").addClass("bi bi-dash-square")),
                                            $("<input>").addClass("form-control input-cantidad p-1 text-center rounded-0").attr({ "disabled":"disabled" })
                                                .css({"width": "40px" })
                                                .data("oProducto", item.oProducto)
                                                .val(item.cantidad),
                                            $("<button>").addClass("btn btn-outline-secondary btn-sumar rounded-0").append($("<i>").addClass("bi bi-plus-square")),
                                        )
                                    ),

                                    //5

                                    $("<div>").addClass("col-sm-2 align-self-center").append(
                                        $("<button>").addClass("btn btn-outline-danger btn-eliminar").append($("<i>").addClass("bi  bi-trash me-1"), "Eliminar")
                                            .data("idproducto", item.oProducto.iD_Prod)
                                    )
                                          
                                )
                            )
                        
                        ).appendTo("#productos-carrito")
                    
                    })

                    sumarTotal()
                },

                error: function (error) {
                    $("#productos-carrito").LoadingOverlay("hide");

                },
                beforeSend: function(){
                    $("#productos-carrito").LoadingOverlay("show");

                }
            })

            ListarDepartamento()
        })


        function ListarDepartamento() {

            $("<option>").attr({ "value": "00" , "disabled":"disabled" , "selected": "true" }).text("Seleccionar").appendTo("#cbodepartamento")

            jQuery.ajax({
                url: "@Url.Action("ObtenerDepartamento", "Tienda")",
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.lista) {
                        $.each(data.lista, function (i, item) {
                            $("<option>").attr({ "value": item.iD_Dep }).text(item.descripcion).appendTo("#cbodepartamento")
                        })
                    }
                    ListarMunicipio();
                }

            })
        }


        //EN FUNCION DEL EVENTO EJECUTA LA FUNCION 
        $("#cbodepartamento").on("change", function () {
            ListarMunicipio();

        })


        function ListarMunicipio() {

            $("#cbomunicipio").html("")

            $("<option>").attr({ "value": "00", "disabled": "disabled", "selected": "true" }).text("Seleccionar").appendTo("#cbomunicipio")

            jQuery.ajax({
                url: "@Url.Action("ObtenerMunicipio", "Tienda")",
                type: "POST",
                data: { iddepartamento: $("#cbodepartamento option:selected" ).val() },
               // dataType: "json",
                //contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.lista) {
                        $.each(data.lista, function (i, item) {
                            $("<option>").attr({ "value": item.iD_Mun }).text(item.descripcion).appendTo("#cbomunicipio")
                        })
                    }

                }

            })
        }


        function sumarTotal(){

            var sumaTotal = parseFloat(0)

            $("input.input-cantidad").each(function (i) {
                var precio = $(this).data("oProducto").precio;
                var cantidad = parseFloat($(this).val())

                var subtotal = precio * cantidad;
                
                sumaTotal += subtotal;

            })

            $("#total").text(sumaTotal.toFixed(2))
            $("#total").data("sumatotal", sumaTotal)

        }


        $(document).on("click", ".btn-sumar", function(){
            var div_contenedor = $(this).parent("div.d-flex");

            var input_cantidad = $(div_contenedor).find("input.input-cantidad");

            var btn = $(this);

            var idproducto = $(input_cantidad).data("oProducto").iD_Prod;

            jQuery.ajax({
                url: "@Url.Action("OperacionCarrito", "Tienda")",
                type: "POST",
                data: { idproducto : idproducto, sumar: true },
                success: function (data) {
                    
                    $(btn).LoadingOverlay("hide")

                    if(data.respuesta){
                        var cantidad = parseInt($(input_cantidad).val()) + 1;
                        
                        $(input_cantidad).val(cantidad);
                        
                        sumarTotal()

                    }else{
                        swal("", data.mensaje,"warning")
                    }

                },
                error: function (error) {
                    $(btn).LoadingOverlay("hide")
                },
                beforeSend: function () {
                
                    $(btn).LoadingOverlay("show")

                }

            })


        })


        $(document).on("click", ".btn-restar", function () {
            var div_contenedor = $(this).parent("div.d-flex");

            var input_cantidad = $(div_contenedor).find("input.input-cantidad");

            var btn = $(this);

            var idproducto = $(input_cantidad).data("oProducto").iD_Prod;

            var cantidad = parseInt($(input_cantidad).val()) - 1;
            
            if (cantidad >= 1) {

                jQuery.ajax({
                    url: "@Url.Action("OperacionCarrito", "Tienda")",
                    type: "POST",
                    data: { idproducto: idproducto, sumar: false },
                    success: function (data) {

                        $(btn).LoadingOverlay("hide")

                        if (data.respuesta) {

                            $(input_cantidad).val(cantidad);

                            sumarTotal()

                        } else {
                            swal("", data.mensaje, "warning")
                        }

                    },
                    error: function (error) {
                        $(btn).LoadingOverlay("hide")
                    },
                    beforeSend: function () {

                        $(btn).LoadingOverlay("show")

                    }

                })

            
            }


        })




        $(document).on("click", ".btn-eliminar", function () {


            var idproducto = $(this).data("idproducto");

            var card_producto = $(this).parents("div.card-producto");    

            jQuery.ajax({
                url: "@Url.Action("EliminarCarrito", "Tienda")",
                type: "POST",
                data: { idproducto: idproducto },
                success: function (data) {

                    if (data.respuesta) {
                        
                        card_producto.remove();

                        MostrarCantidadCarrito();

                        sumarTotal();

                    } else {
                        swal("", data.mensaje, "warning")
                    }

                }

            })


        })



        function RealizarPago(){
            if (  parseInt( $("#cantidadcarrito").text()) == 0   ){
                swal("", "No existen productos en el carrito", "warning")
                return

            }

            if ($("#cbomunicipio").val() == null || $("#txtnombrecontacto").val() == "" || $("#txtdireccion").val() == "" || $("#txttelefono").val() == "") {

                swal("", "Debe completar los datos de Detalle Envío", "warning")
                return

            }


            var venta = {
                TotalProducto : $("input.input-cantidad").length,
                MontoTotal: 0,
                Contacto: $("#txtnombrecontacto").val(),
                ID_Municipio: $("#cbomunicipio").val(),
                Telefono: $("#txttelefono").val(),
                Direccion: $("#txtdireccion").val()
            }


            var lista_carrito = [];

            
            $("input.input-cantidad").each(function (i){
                var producto = $(this).data("oProducto");
                var cantidad = parseFloat($(this).val());

                lista_carrito.push({
                    oProducto: producto,
                    Cantidad: cantidad
                })
            })



            jQuery.ajax({
                url: '@Url.Action("ProcesarPago", "Tienda")',
                type: "POST",
                data: { oListaCarrito: lista_carrito,  oVenta: venta }, 
                dataType: "json",
                success: function (data) {
                    $.LoadingOverlay("hide");

                    if(data.status){
                        var jsonresult = data.response;

                        var links = jsonresult.links;
                        var resultado = links.find(item => item.rel == "approve");
                        
                        window.location.href = resultado.href

                    }else{
                        swal("", "Intente más tarde", "warning");

                    }

                },
                error: function (error) {
                    $.LoadingOverlay("hide");

                },
                beforeSend: function () {
                    $.LoadingOverlay("show");

                }
            })



        }




    </script>
}